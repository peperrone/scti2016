<div id="modal1" class="modal subscription-modal" ng-controller="signupCtrl">
  <div class="modal-content">
    <h4 class="header center scti-blue-text">Inscrição</h4>
    <div class="row">
      <form class="col s12">
        <div class="row">
          <div class="input-field col s12">
            <i class="material-icons prefix scti-blue-text">account_circle</i>
            <input id="name" type="text" class="validate">
            <label for="name">Nome Completo</label>
          </div>
          <div class="input-field col s12">
            <i class="material-icons prefix scti-blue-text">email</i>
            <input id="email" type="tel" class="validate">
            <label for="email">E-mail</label>
          </div>
          <div class="input-field col s12">
            <i class="material-icons prefix scti-blue-text">lock_outline</i>
            <input id="password" type="password" class="validate">
            <label for="password">Senha</label>
          </div>
          <div class="input-field col s12">
            <i class="material-icons prefix scti-blue-text">https</i>
            <input id="password2" type="password" class="validate">
            <label for="password2">Confirmar Senha</label>
          </div>
          <div class="input-field col s12">
            <button type="submit" class="waves-effect waves-light btn btn-large scti-blue">Enviar</button>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>